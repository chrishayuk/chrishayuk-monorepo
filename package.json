{
  "name": "chrishayuk-monorepo",
  "private": true,
  "description": "chrishayuk channel codebase",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {"commit": "cz"},
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "dev": {
        "cache": false
      }
    }
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "turbo": "latest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
